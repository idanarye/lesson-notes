\begin_inset Formula $M\subset\mathbb{R}^{3}$
\end_inset

 משטח רגולרי קומפקטי אוריינטבילי.
 נניח שהשפה 
\begin_inset Formula $\partial M$
\end_inset

 אינה ריקה ומורכבת מעקומים חלקים למקוטעין.
 אזי זוית הסיבוב המעודנת מיחס ל
\begin_inset Formula $M$
\end_inset

 שווה לאינטגרל על עקמומיות גאוס:
\begin_inset Formula 
\[
\theta\left(M\right)=\iint_{M}K\mathrm{\, d}S
\]

\end_inset


\end_layout

\begin_layout Subsection*
הוכחה
\end_layout

\begin_layout Standard
נניח שהיריעה מכוסה ע"י מידה בודדת וכן שהמטריקה נתונה ע"י 
\begin_inset Formula $\mathrm{d}S^{2}=\mathrm{d}r_{1}^{2}+h^{2}\mathrm{\, d}r_{2}^{2}$
\end_inset

.
 נגדיר:
\begin_inset Formula 
\[
v=r_{1}\qquad w=\frac{r_{2}}{h}
\]

\end_inset


\end_layout

\begin_layout Standard
יהי 
\begin_inset Formula $x_{i}$
\end_inset

 שדה משיק ל
\begin_inset Formula $M$
\end_inset

.
 אזי:
\begin_inset Formula 
\[
x_{i}\left(t\right)=\cos\alpha_{i}\left(t\right)v\left(\gamma_{i}\left(t\right)\right)+\sin\alpha_{i}\left(t\right)w\left(\gamma_{i}\left(t\right)\right)=\cos\alpha_{i}\left(t\right)r_{1}+\frac{\sin\alpha_{i}\left(t\right)}{h}r_{2}
\]

\end_inset


\end_layout

\begin_layout Standard
נניח 
\begin_inset Formula $\gamma_{i}$
\end_inset

 חלק:
\begin_inset Formula 
\[
\Gamma_{11}^{1}=0\qquad\Gamma_{12}^{1}=0\qquad\Gamma_{22}^{1}=\frac{1}{2}\left(h^{2}\right)_{1}
\]

\end_inset

מקבלים:
\begin_inset Formula 
\[
-\sin\alpha_{i}\cdot\alpha_{i}'\left(t\right)-\frac{1}{2}\left(h^{2}\right)_{1}u_{2}'\cdot\frac{1}{h}\sin\alpha_{i}\left(t\right)=0
\]

\end_inset

כלומר:
\begin_inset Formula 
\[
\alpha_{i}'\left(t\right)=-\frac{\partial}{\partial u_{1}}hu_{2}'\left(t\right)
\]

\end_inset

ומכאן
\begin_inset Formula 
\[
\theta_{i}=\alpha\left(b\right)-\alpha\left(a\right)=\int_{a}^{b}\alpha_{i}'\left(t\right)\mathrm{\, d}t=\int_{\partial_{i}v}\frac{\partial h}{\partial u_{1}}\mathrm{\, d}u_{2}
\]

\end_inset

כאשר 
\begin_inset Formula $\partial_{i}v$
\end_inset

 הוא רכיב הקשירות ה
\begin_inset Formula $i$
\end_inset

 של השפה.
\begin_inset Formula 
\[
\theta\left(M\right)=\sum_{i=1}^{2}\theta_{i}=-\int_{\partial U}\frac{\partial2h}{\partial u_{1}}\mathrm{\, d}u_{2}
\]

\end_inset

נשתמש במשפט סטוקס/גרין:
\begin_inset Formula 
\[
\int_{\partial U}\left(P\mathrm{\, d}u_{1}+Q\mathrm{\, d}u_{2}\right)=\iint_{U}\left(\frac{\partial Q}{\partial u_{1}}-\frac{\partial P}{\partial u_{2}}\right)\mathrm{\, d}u_{1}\mathrm{\, d}u_{2}
\]

\end_inset

במקרה שלנו 
\begin_inset Formula $P=0\qquad Q=\frac{2h}{2u_{1}}$
\end_inset

 ונשים לב ש
\begin_inset Formula $h=\sqrt{g}$
\end_inset

.
 נקבל:
\begin_inset Formula 
\[
\theta=-\iint_{U}\frac{\partial^{2}}{\partial u_{1}^{2}}h\mathrm{\, d}u_{1}\mathrm{\, d}u_{2}
\]

\end_inset

ידוע 
\begin_inset Formula $\frac{\partial^{2}}{\partial u_{1}^{2}}h=-K\sqrt{g}$
\end_inset

, ולכן
\begin_inset Formula 
\[
\theta\left(M\right)=\iint_{U}K\sqrt{g}\mathrm{\, d}u_{1}\mathrm{\, d}u_{2}=\iint_{M}K\mathrm{\, d}S
\]

\end_inset


\end_layout

