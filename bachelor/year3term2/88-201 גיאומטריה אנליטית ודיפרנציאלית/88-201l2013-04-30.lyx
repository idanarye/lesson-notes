\begin_layout Standard
\begin_inset Formula 
\[
\left(r,\theta,\varphi\right)\mapsto\left(r\sin\theta\cos\varphi,r\sin\theta\sin\varphi,r\cos\theta\right)
\]

\end_inset


\begin_inset Formula 
\[
\varphi\in\left[0,2\pi\right)\qquad\theta\in\left[0,\pi\right],r\in\left[0,\infty\right)
\]

\end_inset


\begin_inset Formula 
\[
\mathrm{d}\gamma=\begin{pmatrix}\sin\theta\cos\varphi & r\cos\theta\cos\varphi & -r\sin\theta\sin\varphi\\
\sin\theta\sin\varphi & r\cos\theta\sin\varphi & r\sin\theta\cos\varphi\\
\cos\theta & -r\sin\theta & 0
\end{pmatrix}
\]

\end_inset


\begin_inset Formula 
\[
g=\begin{pmatrix}1 & 0 & 0\\
0 & r^{2} & 0\\
0 & 0 & r^{2}\sin^{2}\theta
\end{pmatrix}
