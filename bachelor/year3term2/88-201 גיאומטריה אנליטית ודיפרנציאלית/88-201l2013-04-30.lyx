\begin_layout Standard
כלומר לכל 
\begin_inset Formula $\gamma\left(t\right)\in\mathbb{R}^{3}$
\end_inset

 מתקיים 
\begin_inset Formula $\forall_{t}F\left(\gamma\left(t\right)\right)=0$
\end_inset

.
 אפשר לגזור לפי 
\begin_inset Formula $t$
\end_inset

:
\begin_inset Formula 
\[
0=\frac{\mathrm{d}F\left(\gamma\left(t\right)\right)}{\mathrm{d}t}=\frac{\mathrm{d}F\left(x\left(t\right),y\left(t\right),z\left(t\right)\right)}{\mathrm{d}t}=\frac{\partial F}{\partial x}\frac{\mathrm{d}x}{\mathrm{d}t}+\frac{\partial F}{\partial y}\frac{\mathrm{d}y}{\mathrm{d}t}+\frac{\partial F}{\partial z}\frac{\mathrm{d}z}{\mathrm{d}t}
\]

\end_inset

ומזה יוצא ש:
\begin_inset Formula 
\[
\left\langle \nabla F,r\right\rangle =0
\]

\end_inset

כאשר
\begin_inset Formula 
\[
r:=\frac{\mathrm{d}\gamma}{\mathrm{d}t}
\]

\end_inset


\end_layout

\begin_layout Standard
הנורמל הוא:
\begin_inset Formula 
\[
\hat{n}=\frac{\nabla F}{\left\Vert \nabla F\right\Vert }
\]

\end_inset

ואם
\begin_inset Formula 
\[
\gamma:U\to\mathbb{R}^{3}
\]

\end_inset

אז
\begin_inset Formula 
\[
\gamma_{u}:=\frac{\mathrm{d}\vec{\gamma}}{\mathrm{d}u}\qquad\gamma_{v}:=\frac{\mathrm{d}\vec{\gamma}}{\mathrm{d}v}
\]

\end_inset

והנורמל הוא
\begin_inset Formula 
\[
\hat{n}=\frac{\vec{\gamma}_{u}\times\vec{\gamma}_{v}}{\left\Vert \vec{\gamma}_{u}\times\vec{\gamma}_{v}\right\Vert }
\]

\end_inset


\end_layout

