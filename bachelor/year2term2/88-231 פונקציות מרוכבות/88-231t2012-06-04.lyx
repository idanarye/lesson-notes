\begin_layout Subsection*
הוכחה
\end_layout

\begin_layout Standard
נניח תחילה ש
\begin_inset Formula $g\left(\alpha\right)\neq0$
\end_inset

.
 
\begin_inset Formula $\alpha$
\end_inset

 הוא אפס פשוט של 
\begin_inset Formula $h\left(z\right)$
\end_inset

 ולכן 
\begin_inset Formula $\alpha$
\end_inset

 הוא קוטב פשוט של 
\begin_inset Formula $\cfrac{1}{h\left(z\right)}$
\end_inset

 וגם קוטב פשוט של 
\begin_inset Formula $\cfrac{g\left(z\right)}{h\left(z\right)}$
\end_inset

.
\begin_inset Formula 
\[
\textnormal{Res}\left(f,\alpha\right)=\lim_{z\to\alpha}\left(z-\alpha\right)\cdot f'\left(z\right)=\lim_{z\to\alpha}\left(z-\alpha\right)\frac{g\left(z\right)}{h\left(z\right)}=
\]

\end_inset


\begin_inset Formula 
\[
=\lim_{z\to\alpha}\frac{g\left(z\right)}{\frac{h\left(z\right)-h\left(\alpha\right)}{\left(z-\alpha\right)}}=\frac{g\left(\alpha\right)}{h'\left(\alpha\right)}\qquad\blacksquare
\]

\end_inset


\end_layout

\begin_layout Standard
עכשיו, נניח כי 
\begin_inset Formula $g\left(\alpha\right)=0$
\end_inset

.
 נניח כי 
\begin_inset Formula $\alpha$
\end_inset

 הוא אפס מסדר 
\begin_inset Formula $m$
\end_inset

 של 
\begin_inset Formula $g\left(z\right)$
\end_inset


\begin_inset Formula 
\[
\left\{ \begin{array}{c}
g\left(z\right)=\left(z-\alpha\right)^{m}\tilde{g}\left(z\right)\\
h\left(z\right)=\left(z-\alpha\right)\tilde{h}\left(z\right)
\end{array}\right.
\]

\end_inset

כאשר 
\begin_inset Formula $\tilde{g},\tilde{h}$
\end_inset

 אנליטיות ולא מתאפסות ב
\begin_inset Formula $\alpha$
\end_inset

.
\end_layout

\begin_layout Standard
לכל 
\begin_inset Formula $z\neq\alpha$
\end_inset

 נקבל:
\begin_inset Formula 
\[
f\left(z\right)=\frac{\left(z-\alpha\right)^{m}\cdot\tilde{g}\left(z\right)}{\left(z-\alpha\right)\cdot\tilde{h}\left(z\right)}=\left(z-\alpha\right)^{m-1}\frac{\tilde{g}\left(z\right)}{\tilde{h}\left(z\right)}
\]

\end_inset


\end_layout

