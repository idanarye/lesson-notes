\end_inset

 כאשר
\begin_inset Formula 
\[
\tilde{\psi}_{j}\left(t_{1},\dots t_{k-1}\right)=\psi_{j}\left(t_{1},\dots t_{k-1},0\right)
\]

\end_inset

ואז
\begin_inset Formula 
\[
T_{ij}=\psi_{i}^{-1}\left(\psi_{j}\left(u_{1},\dots u_{k}\right)\right)=\left(g_{1}\left(u_{1},\dots u_{k}\right),\dots g_{k}\left(u_{1},\dots u_{k}\right)\right)
\]

\end_inset


\begin_inset Formula 
\[
\tilde{T}_{ij}=\tilde{\psi}_{i}^{-1}\circ\tilde{\psi}_{j}=\left(g_{1}\left(u_{1},\dots u_{k-1},-\right),g_{2}\left(u_{1},\dots u_{k-1},0\right)\right)
\]

\end_inset


\begin_inset Formula 
\[
g_{k}\left(u_{1},\dots u_{k-1},0\right)=0\Rightarrow\cfrac{\partial g_{k}}{\partial t_{e}}\left(u_{1},\dots u_{k-1},0\right)=0\qquad1\le e\le k-1
\]

\end_inset


\begin_inset Formula 
\[
T'_{ij}\left(u_{1},\dots u_{k-1},0\right)=\begin{pmatrix}\cfrac{\partial g_{1}}{\partial t_{1}}\left(u_{1},\dots u_{k-1},0\right) & \cdots & \cfrac{\partial g_{1}}{\partial t_{k}}\left(u_{1},\dots u_{n-1},0\right)\\
\vdots & \ddots & \vdots\\
0 & \cdots & \cfrac{\partial g_{k}}{\partial t_{k}}\left(u_{1},\dots u_{k-1},0\right)
\end{pmatrix}
\]

\end_inset


\begin_inset Formula 
\[
\det T_{ij}'\left(u_{1}\dots u_{k-1},0\right)=\cfrac{\partial g_{k}}{\partial t_{k}}\left(u_{1},\dots u_{k-1},0\right)\cdot\det\tilde{T}_{ij}'\left(u_{1},\dots u_{k-1}\right)>0
\]

\end_inset


\end_layout

