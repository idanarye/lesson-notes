\begin_layout Standard
\begin_inset Formula 
\[
\frac{\mathrm{d}r\left(\gamma\left(t\right)\right)}{\mathrm{d}t}=\sum_{i}\frac{\mathrm{d}r}{\mathrm{d}u^{i}}\frac{\mathrm{d}\gamma^{i}}{\mathrm{d}t}=\sum_{i}r_{,i}\left(\gamma\left(t\right)\right)\dot{\gamma}^{i}
\]

\end_inset


\begin_inset Formula 
\[
\frac{\mathrm{d}}{\mathrm{d}t}\frac{\mathrm{d}r}{\mathrm{d}t}=\sum_{i}r_{,i}\left(\gamma\left(t\right)\right)\ddot{\gamma}^{i}+\sum_{i}\left(\frac{\mathrm{d}}{\mathrm{d}t}r_{,i}\left(\gamma\left(t\right)\right)\right)\dot{\gamma}^{i}=
\]

\end_inset


\begin_inset Formula 
\[
=\sum_{i}r_{,i}\left(\gamma\left(t\right)\right)\ddot{\gamma}^{i}+\sum_{i}\left(\sum_{j}r_{,ij}\dot{\gamma}^{j}\right)\dot{\gamma}^{i}=
\]

\end_inset


\begin_inset Formula 
\[
=\sum_{i}r_{,i}\ddot{\gamma}^{i}+\sum_{i}\left(\sum_{j}\dot{\gamma}^{j}\sum_{k}\Gamma_{\hspace{4bp}ij}^{k}r_{,k}\right)\dot{\gamma}^{i}+\sum_{i}\sum_{j}\dot{\gamma}^{j}b_{ij}\hat{n}\dot{\gamma}^{i}=
\]

\end_inset


\begin_inset Formula 
\[
=\sum_{k}r_{,k}\ddot{\gamma}^{k}+\sum_{k}\sum_{i}\sum_{j}r_{,k}\Gamma_{\hspace{4bp}ij}^{k}\dot{\gamma}^{i}\dot{\gamma}^{j}+\left(\begin{array}{c}
\textnormal{something}\\
\textnormal{perpendicular}\\
\textnormal{to \ensuremath{\hat{n}}}
\end{array}\right)\hat{n}
\]

\end_inset

בקו גאודזי נדרוש
\begin_inset Formula 
\[
0=\sum_{k}r_{,k}\ddot{\gamma}^{k}+\sum\sum\sum r_{,k}\Gamma_{\hspace{4bp}ij}^{k}\dot{\gamma}^{i}\dot{\gamma}^{j}
\]

\end_inset

לכן דורשים
\begin_inset Formula 
\[
\forall_{k}\ddot{\gamma}^{k}+\Gamma_{\hspace{4bp}ij}^{k}\dot{\gamma}^{i}\dot{\gamma}^{j}=0
\]

\end_inset


