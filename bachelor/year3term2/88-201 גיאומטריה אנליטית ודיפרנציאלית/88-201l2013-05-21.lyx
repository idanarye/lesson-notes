\begin_layout Standard
\begin_inset Formula 
\[
g_{11,1}=0\qquad g_{11,2}=2R^{2}z\qquad g_{22,1}=0\qquad g_{22,2}=0
\]

\end_inset


\begin_inset Formula 
\[
\Gamma_{\hspace{4bp}11}^{1}=\frac{1}{2}g^{11}\left(g_{11,1}+g_{11,1}-g_{11,1}\right)+\frac{1}{2}g^{12}\left(g_{21,1}+g_{12,1}-g_{11,2}\right)=0
\]

\end_inset


\begin_inset Formula 
\[
\Gamma_{\hspace{4bp}12}^{1}=\Gamma_{\hspace{4bp}21}^{1}=\frac{1}{2}g^{11}\left(g_{11,2}+\cancel{g_{21,1}}-\cancel{g_{12,1}}\right)+\frac{1}{2}g^{12}\left(g_{21,1}+g_{22,1}-g_{12,2}\right)=\frac{1}{2}\frac{1}{R^{2}z^{2}}2R^{2}z=\frac{1}{z}
\]

\end_inset


\begin_inset Formula 
\[
\Gamma_{\hspace{4bp}11}^{2}=-\frac{R^{2}}{1+r^{2}}z
\]

\end_inset


\end_layout

